@model RestaurantFinder.Models.RestaurantCouponsMaster
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <h4 class="header-title">Add Coupons</h4>
                        <p class="sub-header">
                            .
                        </p>

                        <form method="post" class="parsley-examples" data-parsley-validate novalidate>
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.RestaurantId, new SelectList(ViewBag.resturant, "ID", "Name"), "Select Resturant", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="emailAddress">Coupon Name<span class="text-danger">*</span></label>
                                <input type="text" name="CouponName" parsley-trigger="change" required
                                       placeholder="CouponName" class="form-control" id="emailAddress">
                            </div>
                            <div class="form-group">
                                <label for="pass1">Coupon Code<span class="text-danger">*</span></label>
                                <input id="pass1" type="text" name="CouponCode" placeholder="CouponCode" required
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="pass1">StartDate<span class="text-danger">*</span></label>
                                <input id="pass1" type="date" name="StartDate" placeholder="StartDate" required
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="pass1">EndDate<span class="text-danger">*</span></label>
                                <input id="pass1" type="date" name="EndDate" placeholder="TableName" required
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="pass1">Discounte<span class="text-danger">*</span></label>
                                <input id="pass1" type="text" name="Discount" placeholder="Discount" required
                                       class="form-control">
                            </div>

                            <div class="form-group text-right mb-0">
                                <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div><!-- end col-->
    </div>
</div>
<!-- end row -->
