@model RestaurantFinder.Models.RestaurantTable
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <h4 class="header-title">Add Resturant</h4>
                        <p class="sub-header">
                            .
                        </p>

                        <form method="post" class="parsley-examples" data-parsley-validate novalidate>
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.RestaurantId, new SelectList(ViewBag.resturant, "ID", "Name"), "Select Resturant", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="emailAddress">Table Number<span class="text-danger">*</span></label>
                                <input type="text" name="TableNumber" parsley-trigger="change" required
                                       placeholder="TableNumber" class="form-control" id="emailAddress">
                            </div>
                            <div class="form-group">
                                <label for="pass1">TableName<span class="text-danger">*</span></label>
                                <input id="pass1" type="text" name="TableName" placeholder="TableName" required
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="pass1">TableCapacity<span class="text-danger">*</span></label>
                                <input id="pass1" type="text" name="TableCapacity" placeholder="TableCapacity" required
                                       class="form-control">
                            </div>

                            <div class="form-group text-right mb-0">
                                <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div><!-- end col-->
    </div>
    <!-- end row -->
