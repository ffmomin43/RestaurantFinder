@model IEnumerable<RestaurantFinder.Models.CategoryMaster>

@{
    ViewBag.Title = "Index";
}



@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <h4 class="header-title">All Category </h4>
                <p class="sub-header">

                </p>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category image</th>
                            

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                          <td> @if (item.ThumbnailImageUrl == null)
                            {
                                <h2 style="color:red">Please Upload Cateogry Image</h2>
                            }
                            else
                            {
                                <img src="@Url.Content(item.ThumbnailImageUrl)" height="50 " width="100">
                            }
                            </td>

                            <td>

                                <a href="@Url.Action("Edit", "CategoryMaster", new { id = item.ID })" class="btn btn-danger">
                                    <span class="fas fa-edit mr-2"></span>

                                </a>
                                |
                                <a href="@Url.Action("Delete", "CategoryMaster", new { id = item.ID })" class="btn btn-danger">
                                    <span class="fas fa-trash mr-2"></span>

                                </a>
                                |
                                <a href="@Url.Action("Index", "CategoryMaster", new { id = item.ID })" class="btn btn-danger">
                                    <span class="fas fa-list mr-2"></span>

                                </a>



                            </td>
                        </tr>

                        }




                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end row -->
}



else
{
    <div class="alert alert-info" role="alert">
        Record Not Found
    </div>
}

@section scripts
{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });</script>
    }