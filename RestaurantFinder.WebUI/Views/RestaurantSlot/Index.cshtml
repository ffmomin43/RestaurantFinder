@model IEnumerable<RestaurantFinder.Models.RestaurantSlot>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   
    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.SlotName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurantid)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SlotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurantid)
            </td>
            <td>

                <a href="@Url.Action("Edit", "RestaurantSlot", new { id = item.ID})" class="btn btn-danger">
                    <span class="fas fa-edit mr-2"></span>

                </a>
                |
                <a href="@Url.Action("Delete", "RestaurantSlot", new { id = item.ID })" class="btn btn-danger">
                    <span class="fas fa-trash mr-2"></span>

                </a>

                @*<a href="@Url.Action("Index", "Restaurant", new { id = item.ID })" class="btn btn-danger">
                <span class="fas fa-list mr-2"></span>

            </a>*@



            </td>
        </tr>
        }

    </table>
</body>
</html>
@section scripts
{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });</script>}