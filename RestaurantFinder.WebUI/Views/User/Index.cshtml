@model IEnumerable<RestaurantFinder.Models.User>

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
       
    </p>
    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>

                <td>

                    <a href="@Url.Action("Edit", "User", new { id = item.ID})" class="btn btn-danger">
                        <span class="fas fa-edit mr-2"></span>

                    </a>
                    |
                    <a href="@Url.Action("Delete", "User", new { id = item.ID })" class="btn btn-danger">
                        <span class="fas fa-trash mr-2"></span>

                    </a>

                    @*<a href="@Url.Action("Index", "Restaurant", new { id = item.ID })" class="btn btn-danger">
                            <span class="fas fa-list mr-2"></span>

                        </a>*@



                </td>
            </tr>
        }

    </table>
</body>
</html>
@section scripts
{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });</script>}