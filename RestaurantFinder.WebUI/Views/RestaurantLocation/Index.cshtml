@model IEnumerable<RestaurantFinder.Models.Restaurantlocationvm>

@{
    ViewBag.Title = "Index";
}



@if (Model.Count() > 0)
{

    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <h4 class="header-title">All Resturant </h4>
                <p class="sub-header">

                </p>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Resturantname</th>
                            <th>Location Name</th>
                            <th>Latitude</th>
                            <th>Longitude</th>



                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.LocationName</td>
                                <td>@item.Latitude</td>
                                <td>@item.Longitude</td>

                                <td>

                                    <a href="@Url.Action("Edit", "RestaurantLocation", new { id = item.ID })" class="btn btn-danger">
                                        <span class="fas fa-edit mr-2"></span>

                                    </a>
                                    |
                                    <a href="@Url.Action("Delete", "RestaurantLocation", new { id = item.ID })" class="btn btn-danger">
                                        <span class="fas fa-trash mr-2"></span>

                                    </a>
                                    |
                                    <a href="@Url.Action("Index", "RestaurantLocation", new { id = item.ID })" class="btn btn-danger">
                                        <span class="fas fa-list mr-2"></span>

                                    </a>



                                </td>
                            </tr>

                        }




                    </tbody>
                </table>
            </div>
        </div>
    </div>  <!-- end row -->
        }
        else
        {
<div class="alert alert-info" role="alert">
        Record Not Found
</div>
}


@section scripts
{

            <script>
                $(document).ready(function () {
                    $('#myTable').DataTable();
                });</script>}