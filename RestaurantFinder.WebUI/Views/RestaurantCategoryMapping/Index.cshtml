@model IEnumerable<RestaurantFinder.Models.RestaurantCategorymappingVm>

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";

    
    ViewBag.Title = "Index";
}



@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <h4 class="header-title">All Category </h4>
                <p class="sub-header">

                </p>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Restaurant Name</th>
                            <th>Create Date</th>
                            <th>Action</th>



                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.categoryName</td>
                                <td>
                                    @item.RestaurantName
                                </td>
                                <td>
                                    @item.CreateDate
                                </td>

                                <td>

                                    <a href="@Url.Action("Edit", "RestaurantCategoryMapping", new { id = item.id })" class="btn btn-danger">
                                        <span class="fas fa-edit mr-2"></span>

                                    </a>
                                    |
                                    <a href="@Url.Action("Delete", "RestaurantCategoryMapping", new { id = item.id })" class="btn btn-danger">
                                        <span class="fas fa-trash mr-2"></span>

                                    </a>
                                    |
                                    <a href="@Url.Action("Index", "RestaurantCategoryMapping", new { id = item.id })" class="btn btn-danger">
                                        <span class="fas fa-list mr-2"></span>

                                    </a>



                                </td>
                            </tr>

                        }




                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end row -->
}



else
{
    <div class="alert alert-info" role="alert">
        Record Not Found
    </div>
}

@section scripts
{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });</script>
}